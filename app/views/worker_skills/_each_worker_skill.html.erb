<div class="c">
    <p><strong><%= worker_skill.skill.skill_type%></strong></p>
    <p>Experience: <%= worker_skill.experience%></p>
    <p>Wage per hour: <%= worker_skill.wage%></p>
    <p>Rating: <%= worker_skill.rating%></p>
    <% if current_user.role == 'worker' %>
        <%= button_to 'Remove', worker_skill_path(id: worker_skill.id) ,method: :delete ,class: 'btn btn-danger' %><br/>
        <%= button_to 'Edit', worker_skill_path(id: worker_skill.id) ,method: :delete ,class: 'btn btn-danger' %><br/>
    <% end %>
    <br/>
</div>