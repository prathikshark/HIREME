<h1>Profile </h1>

<p> <strong> Name:</strong> <%= @customer.user.name %></p>
<p> <strong> Email:</strong> <%= @customer.user.email %> </p>
<p> <strong> Address:</strong> <%= @customer.user.address %> </p>
<p> <strong> Phone:</strong> <%= @customer.user.phone %> </p>

<%= button_to 'Edit',edit_customer_path(id: @customer.id), method: :patch ,class: "btn purple-btn"%>


<div class = "booking-container" >
    <h2><%= @customer.user.name %>'s Booking History</h2>
    <ul>
        <% @bookings.each do |booking| %>
            <li><hr>
            <% booking.booked_services.each do |booked_service| %>
                <div class="booked_service">
                  <p>from_date: <%= booked_service.from_date %></p>
                  <p>to_date: <%= booked_service.to_date %></p>
                  <p>skill_type: <%= booked_service.skill_type %></p>
                  <p>shift: <%= booked_service.shift %></p>
                  <p>time: <%= booked_service.time %></p>
                  <p>hour_per_day: <%= booked_service.hour_per_day %></p>
                  <p>wage: <%= booked_service.wage %></p>
                  <%= form_for booked_service, url: booked_service_path(booked_service.id), method: :patch do |f| %>
                    <p>
                      <%= f.label :comment %><br>
                      <%= f.text_field :comment %>
                    </p>
                    <p>
                      <%= f.label :rating %><br>
                      <%= f.number_field :rating, in: 1..5 %>
                    </p>
                    <%= f.submit 'Update Comment and Rating', class: 'btn btn-primary' %>
                  <% end %>
                </div>
              <% end %>
              
            </li>
            <br>
        <% end %>
    </ul>

</div>

