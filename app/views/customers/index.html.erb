<%= javascript_include_tag "handle_customers" %>

<h1>All Customers</h1>
<% @users.each do |user| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">customer</h5> 
        <p class="card-text">Name: <%= user.name %></p>
        <p class="card-text">Email: <%= user.email %></p>
        <p class="card-text">Phone: <%= user.phone %></p>
        <p class="card-text">Address: <%= user.address %></p>
        <button class= "remove-customer-btn btn btn-danger"  data-customer = <%= user.customer.id %>> Remove</button>  
    </div>
  </div>
<% end %>
