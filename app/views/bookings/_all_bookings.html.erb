<ul>
  <% bookings.each do |booking| %>
    <li>
      <hr>
      <% booking.booked_services.each do |booked_service| %>
        <div class="booked_service">
          <% if_current_user_customer(current_user) do %>
            <p>worker_name: <%= booked_service.worker.user.name %></p>
          <% end %>
          <% if_current_user_worker(current_user) do %>
            <p>customer_name: <%= booked_service.booking.customer.user.name %></p>
          <% end %>
          <p>from_date: <%= booked_service.from_date %></p>
          <p>to_date: <%= booked_service.to_date %></p>
          <p>skill_type: <%= booked_service.skill_type %></p>
          <p>shift: <%= booked_service.shift %></p>
          <p>time: <%= booked_service.time %></p>
          <p>wage: <%= booked_service.wage %></p>
          <% if_current_user_customer(current_user) do %>
              <%= form_for booked_service, url: booked_service_path(booked_service.id), method: :patch do |f| %>
                <%= render partial: "bookings/each_booking", locals: { f: f, booked_service: booked_service } %>
                <%= f.submit 'Update Comment and Rating', class: 'btn btn-primary feedback-submit-btn' %>
              <% end %>
          <% end %>
        </div>
      <% end %>
    </li>
    <br>
  <% end %>
</ul>